<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="594.0" style="-fx-background-color: beige;"
            xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Gravel.GUI.Controller.ScoresMenuController">
    <children>
        <VBox layoutX="-1.0" layoutY="-1.0" style="-fx-background-color: beige;">
            <children>
                <TableView fx:id="tableView" prefHeight="324.0" prefWidth="600.0" style="-fx-background-color: beige;">
                    <columns>
                        <TableColumn fx:id="firstPlayer" prefWidth="189.0" style="-fx-background-color: lightblue;"
                                     text="First Player"/>
                        <TableColumn fx:id="secondPlayer" prefWidth="219.0" style="-fx-background-color: lightblue;"
                                     text="Second Player"/>
                        <TableColumn fx:id="winnerPlayer" prefWidth="191.0" style="-fx-background-color: lightblue;"
                                     text="Winner"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
        <Button fx:id="exit3" layoutX="511.0" layoutY="350.0" mnemonicParsing="false" onAction="#exitScoreButton"
                style="-fx-background-color: red; -fx-border-color: black; -fx-border-width: 2px;" text="EXIT">
            <font>
                <Font name="Times New Roman Bold" size="18.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
